import java.io.*;
import java.util.*;
public class Main {
	
	public static void main(String[] args) {
		// Write your code here
       Scanner sc = new Scanner(System.in);
       int n = sc.nextInt();
        int sum = 0;
        int base = 1;
        
       
       while(n > 0){
           
           int rem = n%10;
           sum+=rem*base;
           base=base*2;
           n/=10;
           
       } 
	System.out.println(sum);
    
    }
}
