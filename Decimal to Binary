import java.io.*;
import java.util.Scanner;
public class Main {
	
	public static void main(String[] args) {
		// Write your code here
       Scanner sc = new Scanner(System.in);
       int n = sc.nextInt();
        
       int arr [] = new int[1000];
        
        int i = 0;
       while(n > 0){
           
           arr[i] = n%2;
           
           n/=2;
           i++;
       }
       
        for(int j = i - 1 ; j >=0;j--)
	    System.out.print(arr[j]);
    
    }
}
